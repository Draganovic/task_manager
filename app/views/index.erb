<h1 class="page-header">All Tasks</h1>

  <% @tasks.each do |task| %>
    <h3>(<%= task.id %>) <a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
    <a class="btn-large" href="/tasks/<%= task.id %>/edit">Edit</a>
    <form action="/tasks/<%= task.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input class="btn-large" type="submit" value="delete"/>
    </form>
  <% end %>
